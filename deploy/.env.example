# ====================================
# MyPay Wallets API - Production Environment
# ====================================
# IMPORTANT: Copy this file to .env.production and fill in actual values
# Generate strong passwords using: openssl rand -base64 32

# ====================================
# Database Configuration
# ====================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# Easypaisa Database
EASYPAISA_DB_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# JazzCash Database
JAZZCASH_DB_PASSWORD=<GENERATE_STRONG_PASSWORD_32_CHARS>

# ====================================
# API Authentication
# ====================================
# This is the API key merchants use to authenticate with the Wallets API
# Generate using: openssl rand -hex 32
WALLETS_API_KEY=<GENERATE_64_CHAR_HEX_API_KEY>

# ====================================
# Easypaisa Configuration
# ====================================
EASYPAY_BASE_URL=https://easypay.easypaisa.com.pk
EASYPAY_USERNAME=<YOUR_EASYPAISA_USERNAME>
EASYPAY_PASSWORD=<YOUR_EASYPAISA_PASSWORD>
EASYPAY_STORE_ID=<YOUR_EASYPAISA_STORE_ID>
EASYPAY_DEFAULT_EMAIL=noreply@mypay.mx

# ====================================
# JazzCash Configuration
# ====================================
JAZZCASH_BASE_URL=https://payments.jazzcash.com.pk
JAZZCASH_MERCHANT_ID=<YOUR_JAZZCASH_MERCHANT_ID>
JAZZCASH_PASSWORD=<YOUR_JAZZCASH_PASSWORD>
JAZZCASH_INTEGRITY_SALT=<YOUR_JAZZCASH_INTEGRITY_SALT>
JAZZCASH_DEFAULT_EMAIL=noreply@mypay.mx
